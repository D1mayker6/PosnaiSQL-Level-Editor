<Window x:Class="PosnaiSQLauncher.AddDatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xc="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Новая база данных"
        Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/> 
        </Grid.RowDefinitions>
        
        <TextBlock Text="Введите название базы:" Grid.Row="0" Margin="0,0,0,6"/>
        <xc:WatermarkTextBox x:Name="NameBox"
                             Grid.Row="1"
                             Watermark="Название базы..."
                             Height="28"
                             FontSize="14"
                             Margin="0,0,0,12"/>
        
        <TextBlock Text="Выберите файл диаграммы БД:" Grid.Row="2" Margin="0,0,0,6"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <TextBox x:Name="PathBox"
                     Width="250"
                     Height="28"
                     FontSize="14"
                     Margin="0,0,6,0"/>
            <Button x:Name="BrowseButton"
                    Content="Обзор..."
                    Width="80"
                    Click="BrowseButton_Click"/>
        </StackPanel>
        
        <Border Grid.Row="4"
                Margin="0,12,0,0"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Width="120"
                Height="120"
                HorizontalAlignment="Center">
            <Image x:Name="PreviewImage"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   MaxWidth="112"
                   MaxHeight="112"
                   Margin="4"
                   MouseLeftButtonUp="PreviewImage_MouseLeftButtonUp">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Opacity" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Border>

        <Button x:Name="OkButton"
                Content="Добавить"
                Grid.Row="5"
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                Width="200"
                Height="50"
                IsDefault="True"
                Click="OkButton_Click"/>
    </Grid>
</Window>
