<Window x:Class="PosnaiSQLauncher.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Height="270" Width="320"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добро пожаловать!" 
                   FontSize="16" FontWeight="SemiBold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,16" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock Text="Логин:" FontSize="13" Margin="0,0,0,4"/>
            <TextBox x:Name="LoginTextBox" Height="28" FontSize="20" Background="#F0F0F0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock Text="Пароль:" FontSize="13" Margin="0,0,0,4"/>
            <PasswordBox x:Name="PasswordBox" Height="28" FontSize="20" Background="#F0F0F0"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Войти" Width="100" Height="30"
                HorizontalAlignment="Center" Background="#D0D0D0"
                Click="LoginButton_Click"/>
    </Grid>
</Window>