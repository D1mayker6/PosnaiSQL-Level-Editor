<Window x:Class="PosnaiSQLauncher.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xc="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Экспорт данных"
        Height="360" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/> 
        </Grid.RowDefinitions>

        <!-- Поиск -->
        <xc:WatermarkTextBox x:Name="SearchBox"
                             Grid.Row="0"
                             FontSize="20"
                             Margin="0,0,0,8"
                             Watermark="Поиск по номеру..."
                             TextChanged="SearchBox_TextChanged"/>

        <!-- Список вариантов -->
        <Border Grid.Row="1"
                Margin="0,0,0,8"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="4"
                Padding="4"
                Height="150">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="OptionsPanel" Orientation="Vertical"/>
            </ScrollViewer>
        </Border>

        <!-- Выбрать всё -->
        <CheckBox x:Name="SelectAllCheckBox"
                  Grid.Row="2"
                  Content="Выбрать всё"
                  FontSize="14"
                  Margin="0,0,0,8"
                  Checked="SelectAllCheckBox_Checked"
                  Unchecked="SelectAllCheckBox_Unchecked"/>

        <!-- Экспорт -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">


            <ComboBox x:Name="ExportFormatCombo"
                      Width="120"
                      SelectedIndex="0">
                <ComboBoxItem Content="EXCEL"/>
                <ComboBoxItem Content="JSON"/>
            </ComboBox>

            <Button x:Name="ExportButton"
                    Content="Экспорт"
                    Width="120"
                    Height="40"
                    Click="ExportButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
